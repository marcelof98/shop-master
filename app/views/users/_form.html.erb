<!DOCTYPE html>
<html>
  <head>
    <title>Sistema</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <section>
        <div id=nav>
            <h1>Cadastro</h1>
            <%= form_with(model: user, local: true) do |form| %>
              <% if user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                  <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"><%= form.label :first_name %></label>
                <input class="mdl-textfield__input" type="text" <%= form.text_field :first_name %>
              </div>

              <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"><%= form.label :last_name %></label>
                <input class="mdl-textfield__input" type="text" <%= form.text_field :last_name %>
              </div>

              <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"><%= form.label :email %></label>
                <input class="mdl-textfield__input" type="text" <%= form.text_field :email %>
              </div>

              <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"><%= form.label :password %></label>
                <input class="mdl-textfield__input" type="password" <%= form.password_field :password %>
              </div>

              <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"><%= form.label :password_confirmation %></label>
                <input class="mdl-textfield__input" type="password" <%= form.password_field :password_confirmation %>
              </div>

              <div class="actions">
                  <button class="mdl-button mdl-js-button mdl-button--primary">
                      CADASTRAR
                  </button>
              </div>
            <% end %>
            <%= link_to 'Back', root_url %>
        </div>
    </section>
  </body>
</html>
